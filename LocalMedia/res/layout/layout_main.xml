<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.localmedia.MainActivity" >

	<TextView 
	    android:id="@+id/title_music"
	    android:layout_alignParentTop="true"
	    android:layout_height="50dp"
	    android:layout_width="130dp"
	    android:text="本地音乐"
	    android:gravity="center"
		style="@style/ActionTitleButton"
	    />

	<TextView 
	    android:id="@+id/title_vedio"
	    android:layout_toRightOf="@id/title_music"
	    android:layout_height="50dp"
	    android:layout_width="130dp"
	    android:text="本地视频"
	    android:gravity="center"
		style="@style/ActionTitleButton"
	    />

	<FrameLayout
	    android:id="@+id/layout_content"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:paddingTop="100dp" >
	</FrameLayout>

</RelativeLayout>
